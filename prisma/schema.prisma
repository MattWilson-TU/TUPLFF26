generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Manager {
  id           String       @id @default(cuid())
  name         String
  passwordHash String
  budgetKGBP   Int
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  username     String       @unique
  accounts     Account[]
  wonLots      AuctionLot[]
  bids         Bid[]
  ownedPlayers Player[]
  sessions     Session[]
  squads       Squad[]
  transfers    Transfer[]
}

model Player {
  id             Int                    @id
  firstName      String
  secondName     String
  elementType    Position
  nowCostHalfM   Int
  teamId         Int
  totalPoints    Int                    @default(0)
  photo          String
  currentOwnerId String?                @db.VarChar(191)
  webName        String?
  auctionLots    AuctionLot[]
  gameweekPoints GameweekPlayerPoints[]
  currentOwner   Manager?               @relation(fields: [currentOwnerId], references: [id])
  team           Team                   @relation(fields: [teamId], references: [id])
  squadPlayers   SquadPlayer[]
  transfersIn    Transfer[]             @relation("TransferIn")
  transfersOut   Transfer[]             @relation("TransferOut")
}

model Team {
  id        Int      @id
  name      String
  code      Int?
  shortName String?
  players   Player[]
}

model Squad {
  id          String        @id @default(cuid())
  managerId   String
  phase       Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  totalPoints Int           @default(0)
  manager     Manager       @relation(fields: [managerId], references: [id])
  players     SquadPlayer[]

  @@unique([managerId, phase])
}

model SquadPlayer {
  id       String @id @default(cuid())
  squadId  String
  playerId Int
  slot     Int?
  feeHalfM Int    @default(0)
  player   Player @relation(fields: [playerId], references: [id])
  squad    Squad  @relation(fields: [squadId], references: [id])

  @@unique([squadId, playerId])
}

model Auction {
  id           String        @id @default(cuid())
  status       AuctionStatus @default(OPEN)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  phase        Int           @default(1)
  targetSize   Int           @default(11)
  currentLotId String?
  lots         AuctionLot[]
}

model AuctionLot {
  id             String   @id @default(cuid())
  auctionId      String
  playerId       Int
  isSold         Boolean  @default(false)
  soldPriceHalfM Int?
  winnerId       String?
  createdAt      DateTime @default(now())
  auction        Auction  @relation(fields: [auctionId], references: [id])
  player         Player   @relation(fields: [playerId], references: [id])
  winner         Manager? @relation(fields: [winnerId], references: [id])
  bids           Bid[]
}

model Bid {
  id          String     @id @default(cuid())
  lotId       String
  managerId   String
  amountHalfM Int
  createdAt   DateTime   @default(now())
  lot         AuctionLot @relation(fields: [lotId], references: [id])
  manager     Manager    @relation(fields: [managerId], references: [id])

  @@index([lotId])
  @@index([managerId])
}

model Transfer {
  id             String   @id @default(cuid())
  managerId      String
  phaseFrom      Int
  phaseTo        Int
  outPlayerId    Int
  inPlayerId     Int
  priceDiffHalfM Int      @default(0)
  createdAt      DateTime @default(now())
  inPlayer       Player   @relation("TransferIn", fields: [inPlayerId], references: [id])
  manager        Manager  @relation(fields: [managerId], references: [id])
  outPlayer      Player   @relation("TransferOut", fields: [outPlayerId], references: [id])
}

model Gameweek {
  id           Int                    @id
  phase        Int
  startedAt    DateTime?
  completedAt  DateTime?
  playerPoints GameweekPlayerPoints[]
}

model GameweekPlayerPoints {
  id         String   @id @default(cuid())
  gameweekId Int
  playerId   Int
  points     Int      @default(0)
  gameweek   Gameweek @relation(fields: [gameweekId], references: [id])
  player     Player   @relation(fields: [playerId], references: [id])

  @@unique([gameweekId, playerId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              Manager @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         Manager  @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Position {
  GK
  DEF
  MID
  FWD
}

enum AuctionStatus {
  OPEN
  CLOSED
  COMPLETED
}
